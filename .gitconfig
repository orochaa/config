[alias]
	s = !git status -s
	c = !git add . && git commit -m
	ca = !git add --all && git commit -m
	cm = !git commit -m
	a = !git commit --amend
	aa = !git add --all && git commit --amend
	l = !git log --pretty=format:'%C(blue)%h%C(red)%d %C(white)%s - %C(cyan)%cn %C(green)%cr'
	r = !git remote -v
	ra = !git remote add
	rr = !git remote rename
	rd = !git remote remove
	rs = !git remote set-url
	b = !git branch -v
	bd = !git branch -D
	ck = !git checkout
	po = !git push o
	pd = !git push d
	pa = !git po && git pd
	sr = !git reset --soft HEAD^ 
	g = !git config --global --edit
	alias = !git config --get-regexp '^alias'
[core]
	editor = code --wait
[init]
	defaultBranch = master
[credential "https://github.com"]
	helper = 
	helper = !/usr/bin/gh auth git-credential
[credential "https://gist.github.com"]
	helper = 
	helper = !/usr/bin/gh auth git-credential
[pull]
 rebase = false
